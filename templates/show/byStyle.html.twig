{% extends 'base.html.twig' %}

{% block title %}Concert par genre{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="offset-2 col-8">
                <h1 class="text-center mt-4 mb-4"> 🎷🎸🎧 Concert par Genre 🎧 🎸🎷</h1>

                <table class="table table-striped table-dark">
                    <thead>
                    <tr>
                        <th scope="col">Artiste / Groupe</th>
                        <th scope="col">Tournée</th>
                        <th scope="col">Salle</th>
                        <th scope="col">Date</th>
                        <th scope="col">Note</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for show in showsbyStyle  %}
                    <tr>
                        <td>{{show.Artist}}</td>
                        <td>{{ show.TourName}}</td>
                        <td>{{ show.Venu}} de {{ show.city }}</td>
                        <td>{{ show.Date|date('d/m/Y') }}</td>
                        <td>{{ show.Rate }} ⭐</td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>





            </div>
        </div>
    </div>
{% endblock %}